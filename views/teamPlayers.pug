extends index.pug

block content
    h2 Team #{teamDetails[0].name} - (#{tournamentYearTitle[0].year}) #{tournamentYearTitle[0].title}
    //- div(style={'display': 'flex'})
    div(id="tournament-dropdown" style={'display': 'flex', 'width': '20%', 'flex-direction': 'column', 'position': 'absolute', 'z-index': 2})
        div(class='btn dim' id='dropdown-toggle' data-toggle='false' style={'border': '1px solid black', 'margin-right': '5px'} onclick='toggleDropdown()') (#{tournamentYearTitle[0].year}) #{tournamentYearTitle[0].title}
            img(src="/icons/dropdown.svg" style={'float': 'right', 'width': '20px'})
        each tourney in team_tournaments
            a(class='btn dropdown-btn' href=`/teams/${teamId}/${tourney.tournamentid}` style={'border': '1px solid black', 'display': 'none', 'background-color': 'white'}) (#{tourney.year}) #{tourney.title}
    a(class='btn dim' href=`/teams/${teamId}/${tournamentId}/insertPlayer` style={'position': 'absolute', 'right': '0', 'border': '1px solid black', 'background-color': 'white'}) Add
    div(id="delete-popup" class="shadow-5" style={'display': 'none'})
        img(id="close-delete-popup" onclick='closeDeletePopup()' style={'height': '30px'}, src="/icons/close.svg")
        p(style={'text-align': 'center', 'font-size': '20px', 'margin-top': '10%'}) Are you sure you want to delete this player?
        a(id="delete-btn" class='btn dim' style={'border': '1px solid black', 'margin-left': '40%', 'width': '20%', 'margin-top': '5%'}) Delete
    include team.pug