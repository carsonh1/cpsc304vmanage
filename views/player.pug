extends index.pug

block content
    form(action=`/player/${player.playerid}`, method="post")
        h2 Edit Player
        div(class="form-group")
            label First Name
                input(type="text", class="form-control" name="firstName" value=player.firstname)
        div(class="form-group")
            label Last Name
                input(type="text", class="form-control" name="lastName" value=player.lastname)
        div(class="form-group")
            label Height (cm)
                input(type="number", class="form-control" name="height" step="any" value=player.height)
        div(class="form-group")
            label Date of Birth
                input(type="date", class="form-control" name="dateOfBirth" value=moment(player.dateofbirth).format('YYYY-MM-DD'))
        div(class="form-group")
            label Eligible for future tournaments 
                input(type="checkbox", name="eligible", checked=player.eligible)
        input(type="hidden", name="teamId" value=teamId)
        input(type="hidden", name="tournamentId" value=tournamentId)
        div(class="form-group")
            input(type="submit", value="Update")