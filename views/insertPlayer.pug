extends index.pug

block content
    form(action=`/teams/${teamId}/${tournamentId}`, method="post")
        h2 Insert Player
        div(class="form-group")
            label First Name
                input(type="text", class="form-control" name="firstName" value=player.firstname)
        div(class="form-group")
            label Last Name
                input(type="text", class="form-control" name="lastName" value=player.lastname)
        div(class="form-group")
            label Height (cm)
                input(type="number", class="form-control" step="any" name="height" value=player.height)
        div(class="form-group")
            label Date of Birth
                input(type="date", class="form-control" name="dateOfBirth" value=moment(player.dateofbirth).format('YYYY-MM-DD'))
        div(class="form-group")
            label Jersey Number*
                input(type="number", class="form-control" name="jerseyNumber" value=player.jerseyNumber required)
        div(class="form-group")
            label Existing Player Select
                select(id="existingPlayerId", class="form-control" name="existingPlayerId")
                    option(value='nothing' selected="selected") 
                    for player in existPlayers
                        option(value=player.playerid) #{player.firstname} #{player.lastname}
        div(class="form-group")
            input(type="submit", value="Insert")
