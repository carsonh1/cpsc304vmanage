
div(style={width: '100%', height: '90%', "background-color": 'orange', 'border-radius': '10px', 'margin-top': '5vh'})
    div(class='display-grid')
        div(class='display-row' style={"margin-bottom": "20px"})
            div(class='players-cell') 
                h4 Name
            div(class='players-cell') 
                h4 Jersey Number
            div(class='players-cell') 
                h4 Height (cm)
            div(class='players-cell') 
                h4 Date of Birth
            div(class='players-cell' style={'width': '10%'})

        each player in players
            div(class='display-row') 
                div(class='players-cell') #{player.firstname + ' ' + player.lastname}
                div(class='players-cell') #{player.jerseynumber}
                div(class='players-cell') #{player.height}
                div(class='players-cell') #{moment(player.dateofbirth).format('MMM DD, YYYY')}
                div(class='players-cell' style={'width': '10%'}) 
                    a(class='btn dim' style={'border': '1px solid black', 'margin-right': '5px'} href=`/player/${player.playerid}?teamId=${teamId}&tournamentId=${tournamentId}`) Edit
                    div(class='btn dim' style={'border': '1px solid black'} onclick=`openDeletePopup(${teamId}, ${tournamentId}, ${player.playerid})`) Delete